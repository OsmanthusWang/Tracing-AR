<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    >

    <android.support.v7.widget.CardView
        android:id = "@+id/card2ui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/cardview_light_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_help"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/newfootprint" />

            <TextView
            android:textSize="16sp"
            android:layout_height="70dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="成为留下足迹的第一人"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp">
                <ImageView android:layout_height="match_parent"
                    android:id="@+id/cache1"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:background="@color/transparent"

                    />
                <ImageView android:layout_height="match_parent"
                    android:id="@+id/cache2"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:background="@color/transparent"
                    />
                <ImageView android:layout_height="match_parent"
                    android:id="@+id/cache3"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:background="@color/transparent"
                    />
                <ImageView android:layout_height="match_parent"
                    android:id="@+id/cache4"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:background="@color/transparent"
                    />
                <ImageView android:layout_height="match_parent"
                    android:id="@+id/cache5"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:background="@color/transparent"
                    />
                <ImageView android:layout_height="match_parent"
                    android:id="@+id/cache6"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:background="@color/transparent"
                   />
                <ImageView android:layout_height="match_parent"
                    android:id="@+id/cache7"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:background="@color/transparent"
                    />
                <ImageView android:layout_height="match_parent"
                    android:id="@+id/cache8"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:background="@color/transparent"
                    />
                <ImageView android:layout_height="match_parent"
                    android:id="@+id/cache9"
                    android:layout_width="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:background="@color/transparent"
                  />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="9"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    android:textSize="7pt"
                    android:hint="描述此时此刻的心情..."
                    android:textColor="#4D4D4D"
                    android:id="@+id/edit_intro" />
                <ImageButton android:layout_height="30dp"
                    android:id="@+id/btn_select_img"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/camera_grey"
                    android:background="@color/transparent"
                    />
            </LinearLayout>
            <Button
                android:text="新建足迹点"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="#ffffff"
                android:id="@+id/btn_new_clip" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
